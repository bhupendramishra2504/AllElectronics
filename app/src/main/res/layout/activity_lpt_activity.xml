<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollView1"
    android:background="#0087BD"
    android:fillViewport="true"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="16dp">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context="com.mlmishra.bhupendramishra.allelectronics.Calculator"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <TextView
            android:text="PARALLEL PORT CONNECTION DIAGRAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lpttv1"
            android:layout_weight="0.08"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/lptiv1"
            android:src="@drawable/lpt1"
            android:layout_centerHorizontal="true"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lpttv2"
            android:layout_weight="0.08"
            android:textSize="15sp"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/lptiv2"
            android:src="@drawable/lpt2"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lpttv3"
            android:textSize="15sp"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/lptiv3"
            android:src="@drawable/lpt3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lpttv4"
            android:textSize="15sp"
            android:textColor="#ffffff"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/lptiv4"
            android:src="@drawable/lpt4"
            />

    </LinearLayout>
</ScrollView>